.large-3.columns
  label.text-right.middle for="#{@id}" = @label

.large-9.columns
  
  .large-5.columns.checkboxes.collection
    - for option in @options
      div
        input type='checkbox' name="#{@name}[]" value="#{option.id}" id="#{@name}_#{option.id}"
        label for="#{@name}_#{option.id}" = option.name
    input type='hidden' name="#{@name}[]" value='' syphon='visible'
  
  .large-7.columns
    label.help-text.middle = @hint