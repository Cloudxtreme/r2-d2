.nested-fields
  = f.hidden_field :reportable_type, value: "NcUser"
  = f.hidden_field :report_assignment_type_id, value: 2 
  .row
    .large-4.columns.form-field
      = f.label :username, "Username"
      = f.text_field :username, placeholder: "username"
    .large-4.columns.form-field
      = f.label :registered_domains, "Registered domains"
      = f.text_field :registered_domains, placeholder: "11"
    .large-4.columns.form-field
      = f.label :free_dns_domains, "FreeDNS domains"
      = f.text_field :free_dns_domains, placeholder: "312"
  .row
    .large-12.columns
      = f.label :comment, "Additional Comments"
      = f.text_area :comment, placeholder: "Comments"
  .row
    .large-11.columns.relation-type-check-boxes
      = f.label :relation_type_ids, "Relation types"
      = f.collection_check_boxes :relation_type_ids, RelationType.all, :id, :name do |b|
        = b.check_box style: "margin-bottom:0;"
        = b.label
    .large-1.columns
      = link_to_remove_association content_tag(:i, "", class: "fa fa-minus-square-o action", style: "padding-top:0.5em;", title: "Remove fieldset"), f
  hr