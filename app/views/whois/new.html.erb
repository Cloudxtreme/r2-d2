<% provide(:title, "Whois") %>

<h1>Whois</h1>
<div class="row">
  <div class="large-6 large-offset-3 columns">
    <%= form_tag(controller: "whois", action: "create") do %>
      <div class="row collapse">
        <div class="large-10 columns">
          <%= text_field_tag :name %>
        </div>
        <div class="large-2 columns">
          <%= submit_tag "Go", class: "button postfix" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if @record %>
  <div class="row">
    <div class="large-10 large-offset-1 panel whois-box">
      <% @record.each_line do |line| %>
        <%= line %> <br>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="large-10 large-offset-1 panel callout">
      <p>I can look up domains, TLDs and IP addresses</p>
    </div>
  </div>
<% end %>