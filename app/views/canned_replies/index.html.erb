<% provide(:title, "Canned Replies") %>

<div class="row">
  <div class="large-12 columns">
    <%= link_to "Add new", new_canned_reply_path, class: "button tiny right" %>
    <table width="100%">
      <thead>
        <th>Name</th>
        <th>Description</th>
        <% if can?(:manage, CannedReply) %><th width="15%">Actions</th><% end %>
      </thead>
      <tbody>
        <% @canned_replies.each do |canned_reply| %>
          <tr>
            <td><%= canned_reply.name %></td>
            <td><%= canned_reply.description %></td>
            <% if can?(:manage, CannedReply) %>
              <td>
                <%= link_to content_tag(:i, "", class: "fi-magnifying-glass"), canned_reply_path(canned_reply.id) %>
                <%= link_to content_tag(:i, "", class: "fi-pencil"), edit_canned_reply_path(canned_reply.id) %>
                <%= link_to content_tag(:i, "", class: "fi-x"), canned_reply, method: :delete, data: { confirm: "Are you sure?" } %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>