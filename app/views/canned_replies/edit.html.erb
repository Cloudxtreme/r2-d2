<% provide(:title, "Canned Replies") %>

<div class="row">
  <div class="large-8 large-offset-2 columns">
    <fieldset>
      <legend>Update Canned Reply</legend>
      <%= form_for @canned_reply, url: { action: 'update' } do |f| %>
        <%= render partial: "canned_reply_fields", locals: { f: f } %>
        <br><%= f.submit "Update", class: "button postfix" %>
      <% end %>
    </fieldset>
  </div>
</div>