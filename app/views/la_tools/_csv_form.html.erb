<p class="lead">Upload a .csv file generated by Adhoc/DomainsInfo in Admin so that I can combine these lists</p>

<%= form_tag({ controller: :la_tools, action: :append_csv }, multipart: true) do %>
  <fieldset>
    <legend>Options</legend>  
    <%= hidden_field_tag(:domains_count, occurrences) %>
    <div class="row">
      <div class="large-12 columns">
        <div class="row collapse">
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :username, checked: true) %><%= label_tag(:username, "Username") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :full_name, checked: true) %><%= label_tag(:full_name, "Full Name") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :last_transaction) %><%= label_tag(:last_transaction, "Last Transaction") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :expiration_date) %><%= label_tag(:expiration_date, "Expiration") %></div>
        </div>
        <div class="row collapse">
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :email_address, checked: true) %><%= label_tag(:email_address, "Email Address") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :signup_date) %><%= label_tag(:signup_date, "Signup Date") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :last_login) %><%= label_tag(:last_login, "Last Login") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :order_id) %><%= label_tag(:order_id, "Order ID") %></div>
        </div>
      </div>
    </div>
    <br><%= file_field_tag :domains_info %>
  </fieldset>
  <fieldset>
    <legend>Checkers</legend>
    <div class="row">
      <div class="large-12 columns">
        <div class="row collapse">
          <div class="large-3 columns"><%= check_box_tag('checkers[]', :dbl_surbl) %><%= label_tag(:dbl_surbl, "DBL/SURBL") %></div>
          <div class="large-3 columns"><%= check_box_tag('checkers[]', :epp_status) %><%= label_tag(:epp_status, "EPP Status") %></div>
          <div class="large-3 columns"><%= check_box_tag('checkers[]', :dns) %><%= label_tag(:dns, "DNS Records") %></div>
          <div class="large-3 columns"></div>
        </div>
      </div>
    </div>
  </fieldset>
  <%= submit_tag "Submit", class: "button tiny" %>
<% end %>