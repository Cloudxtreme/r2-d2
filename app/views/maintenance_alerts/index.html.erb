<% provide(:title, "Maintenance Alerts") %>

<h1>eNom Maintenance Alerts</h1>

<% if @alerts %>
  <div class="row">
    <table>
      <thead>
        <tr>
          <th width="200">TLD</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @alerts.each do |alert| %>
          <tr>
            <td><%= alert[:tlds] %></td>
            <td>
              <strong><%= alert[:timeframe] %></strong><br>
              <% alert[:message].each_line do |line| %>
                <br><%= line %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>