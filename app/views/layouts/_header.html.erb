<nav class="top-bar" data-topbar role="navigation">
  
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "R2-D2", root_path %></h1>
  </ul>

  <section class="top-bar-section">
    <ul class="left">
      <li class="divider"></li>
      <li class="has-dropdown">
        <%= link_to "Domains", whois_path %>
        <ul class="dropdown">
          <%= content_tag(:li, (link_to "Whois", whois_path)) %>
          <%= content_tag(:li, (link_to "Maintenance Alerts", alerts_path)) %>
          <%= content_tag(:li, (link_to "Parse Domains", extract_domains_path)) %>
          <%= content_tag(:li, (link_to "Compare Lists", compare_path)) %>
        </ul>
      </li>
      <li class="divider"></li>
    </ul>
  </section>

  <% if user_signed_in? %>
    <section class="top-bar-section">
      <ul class="right">
        <li class="divider"></li>
        <li class="has-dropdown">
          <a><%= current_user.name %></a>
          <ul class="dropdown">
            <li><%= link_to("Change password", edit_password_path) %></li>
            <li><%= link_to("Sign out", destroy_user_session_path, method: :delete) %></li>
          </ul>
        </li>
      </ul>
    </section>
  <% else %>
    <section class="top-bar-section">
      <ul class="right">
        <li class="has-form">
          <%= link_to("Sign in", new_user_session_path, class: "button") %>
        </li>
      </ul>
    </section>
  <% end %>

</nav>

<header>
  <%= image_tag "logo.png", class: "logo" %>
  <br>
  <h1><%= yield(:title) %></h1>
</header>