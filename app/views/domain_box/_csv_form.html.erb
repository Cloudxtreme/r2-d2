<p class="lead">Upload a .csv file generated by Adhoc/DomainsInfo in Admin so that I can combine these lists</p>

<fieldset>
  <legend>Options</legend>
  <%= form_tag({ controller: :domain_box, action: :parse }, multipart: true) do %>
    <%= hidden_field_tag(:domains_count, occurrences) %>
    <div class="row">
      <div class="large-12 columns">
        <div class="row collapse">
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :username, checked: true) %><%= label_tag(:username, "Username") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :fullname, checked: true) %><%= label_tag(:fullname, "Full Name") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :lasttransaction) %><%= label_tag(:lasttransaction, "Last Transaction") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :expire_datetime) %><%= label_tag(:expire_datetime, "Expiration") %></div>
        </div>
        <div class="row collapse">
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :email, checked: true) %><%= label_tag(:email, "Email Address") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :user_createdatetime) %><%= label_tag(:user_createdatetime, "Signup Date") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :lastlogin) %><%= label_tag(:lastlogin, "Last Login") %></div>
          <div class="large-3 columns"><%= check_box_tag('csv_options[]', :orderid) %><%= label_tag(:orderid, "Order ID") %></div>
        </div>
      </div>
    </div>
    <br><%= file_field_tag :domains_info %>
</fieldset>
    <%= submit_tag "Submit", class: "button tiny" %>
  <% end %>