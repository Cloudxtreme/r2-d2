(function() {
  
  var form    = $("<%= j(render 'form') %>");
  var script  = $(form.get(1)).text();
  var content = form.find("#dynamic-part");
  var dynamic = $("#hosting-abuse-report-form #dynamic-part");
  
  eval(script);
  
  dynamic.hide(200, function() {
    dynamic.html(content);
    dynamic.show(200, function() {
      new HostingAbuseSpam("#abuse-part-spam");
      new HostingAbuseCronJob('#abuse-part-cron-job');
      $("#new_hosting_abuse_form").validate();
    });
  });
  
}).call(this);